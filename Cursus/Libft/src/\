#include<stdio.h>
#include "libft.h"
#include <string.h>

size_t	ft_strlcat(char *dst, const char *src, size_t size)
{
	
	size_t	dst_len;
	size_t	src_len;

	dst_len = strlen(dst);
	src_len = strlen(src);
	size_t	i;
	size_t 	j;

	j = dst_len;
	i = 0;
	if (dst_len >= size)
		return (src_len + size);
	else if (dst_len < size)
	{
		while (j > size -1 && src[i] != 0)
		{
		dst[j] = src[i];
		i++;
		j++;
		}
		dst[j] = 0;
	}
	return (src_len + dst_len);
//	if	(size > 0 && dst_len < size - 1)
//	{
//		while (src[i] && dst_len + i < size - 1)
//		{
//			dst[dst_len] = src[i];
//			i++;
//			j++;
//		}
//		dst[j] = 0;
//	}
//	if (dst_len >= size)
//		dst_len = size;
//	return (dst_len + src_len);
}

